<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poorsa.org.frontend.CreateSchoolingController">
   <children>
      <Label text="enter your education info:">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="-450.0" top="20.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" maxHeight="200.0" prefHeight="200.0">
         <children>
            <VBox alignment="TOP_CENTER" minWidth="400.0" prefHeight="280.0" prefWidth="400.0">
               <children>
                  <TextField id="username" fx:id="schoolName" maxHeight="45.0" maxWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="school name">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField id="username" fx:id="fieldOfStudy" maxHeight="45.0" maxWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="field of study">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField id="username" fx:id="degree" maxHeight="45.0" maxWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="degree">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TextField>
                  <HBox alignment="CENTER_LEFT" maxWidth="300.0" prefHeight="50.0" prefWidth="300.0">
                     <children>
                        <Label text="start date :">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <padding>
                              <Insets left="15.0" />
                           </padding>
                        </Label>
                        <DatePicker fx:id="start" prefHeight="45.0" prefWidth="208.0">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </DatePicker>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" layoutX="60.0" layoutY="160.0" maxWidth="300.0" prefHeight="50.0" prefWidth="300.0">
                     <children>
                        <Label prefWidth="72.0" text="end date :">
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <padding>
                              <Insets left="15.0" />
                           </padding>
                        </Label>
                        <DatePicker fx:id="end" prefHeight="45.0" prefWidth="208.0">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </DatePicker>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0">
               <children>
                  <TextField id="username" fx:id="grade" maxHeight="45.0" maxWidth="300.0" prefHeight="45.0" prefWidth="300.0" promptText="grade">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TextField>
                  <TextArea fx:id="description" maxWidth="300.0" prefHeight="120.0" prefWidth="300.0" promptText="description">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </TextArea>
                  <TextArea fx:id="activities" maxWidth="300.0" prefHeight="70.0" prefWidth="300.0" promptText="activities">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </TextArea>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="resultLabel">
         <VBox.margin>
            <Insets bottom="10.0" top="-20.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0">
         <children>
            <Button id="createB" fx:id="confirm" mnemonicParsing="false" onAction="#confirmOnAction" prefHeight="45.0" prefWidth="185.0" text="confirm" textFill="WHITE">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Comic Sans MS" size="15.0" />
               </font>
            </Button>
            <Button id="backB" fx:id="back" mnemonicParsing="false" onAction="#backOnAction" prefHeight="45.0" prefWidth="185.0" text="back" textFill="WHITE">
               <HBox.margin>
                  <Insets left="30.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Comic Sans MS" size="15.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
